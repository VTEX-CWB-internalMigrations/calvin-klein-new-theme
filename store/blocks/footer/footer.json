{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#footer-0-desktop",
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#footer-2-desktop",
      "flex-layout.row#footer-3-desktop",
      "floating-chat"
    ]
  },
  "flex-layout.row#footer-0-desktop":{
    "children":[
      "logo#footer-logo"
    ],
    "props":{
      "blockClass": "footer-logo-flex"
    }
  },
  "logo#footer-logo":{
    "props":{
      "blockClass": "logo-mobile",
      "title": "Logo",
      "href": "/",
      "url": "https://calvinklein.vtexassets.com/assets/vtex.file-manager-graphql/images/c4ace3a4-bf1b-45b2-a61a-4eabf4b0834b___20e3a17ea318845a7469d2ee21e09397.png"
    }
  },

  "flex-layout.row#footer-1-desktop": {
    "children": [
      "flex-layout.col#1-footer-menu",
      "flex-layout.col#2-footer-menu",
      "flex-layout.col#3-footer-menu",
      "flex-layout.col#4-footer-menu",
      "flex-layout.col#5-footer-menu"
    ],
    "props": {
      "blockClass": ["menu-row", "footer-menu-row"],
      "paddingTop": 6,
      "paddingBottom": 3
    }
  },


  "flex-layout.col#1-footer-menu":{
    "children":[
      "rich-text#1-title-footer",
      "vtex.menu@2.x:menu#footer-menu-1"
    ],
    "props":{
      "blockClass": "footer-col-layout"
    }
  },
  "flex-layout.col#2-footer-menu":{
    "children":[
      "rich-text#2-title-footer",
      "vtex.menu@2.x:menu#footer-menu-2"
    ],
    "props":{
      "blockClass": "footer-col-layout"
    }
  },
  "flex-layout.col#3-footer-menu":{
    "children":[
      "rich-text#3-title-footer",
      "vtex.menu@2.x:menu#footer-menu-3"
    ],
    "props":{
      "blockClass": "footer-col-layout"
    }
  },
  "flex-layout.col#4-footer-menu":{
    "children":[
      "rich-text#4-title-footer",
      "rich-text#contact-info"
    ],
    "props":{
      "blockClass": "footer-col-layout"
    }
  },

  "flex-layout.col#5-footer-menu":{
    "children":[
      "rich-text#5-title-footer",
      "locale-switcher"
    ],
    "props":{
      "blockClass": "footer-col-layout"
    }
  },
  
  "rich-text#1-title-footer":{
    "props":{
      "text": "TÍTULO 1",
      "blockClass": "footer-title"
    }
  },

  "vtex.menu@2.x:menu#footer-menu-1":{
    "props":{
      "orientation": "vertical",
      "blockClass": "footer-text"
    }
  },

  "rich-text#2-title-footer":{
    "props":{
      "text": "TÍTULO 2",
      "blockClass": "footer-title"
    }
  },

  "vtex.menu@2.x:menu#footer-menu-2":{
    "props":{
      "orientation": "vertical",
      "blockClass": "footer-text"
    }
  },

  "rich-text#3-title-footer":{
    "props":{
      "text": "TÍTULO 3",
      "blockClass": "footer-title"
    }
  },

  "vtex.menu@2.x:menu#footer-menu-3":{
    "props":{
      "orientation": "vertical",
      "blockClass": "footer-text"
    }
  },

  "rich-text#4-title-footer":{
    "props":{
      "text": "TÍTULO 4",
      "blockClass": "footer-title"
    }
  },

  "rich-text#contact-info":{
    "props":{
      "text": "Contact Information",
      "blockClass": "footer-text"
    }
  },

  "rich-text#5-title-footer":{
    "props":{
      "text": "TÍTULO 5",
      "blockClass": "footer-title"
    }
  },

  "social-networks": {
    "props": {
      "socialNetworks": [
        {
          "name": "Facebook",
          "url": "https://www.facebook.com/vtexonline/"
        },
        {
          "name": "Instagram",
          "url": "https://www.instagram.com/vtextruecloud/"
        }
      ]
    }
  },

  "flex-layout.row#footer-2-desktop": {
    "children": [
      "social-networks",  
      "footer-spacer",
      "footer-spacer",
      "back-to-top-button"
    ],
    "props": {
      "blockClass": "payment-methods"
    }
  },

  "back-to-top-button":{
    "props":{
      "displayThreshold": 800,
      "display": "caret-icon"
    }
  },
  "accepted-payment-methods": {
    "props": {
      "paymentMethods": ["MasterCard", "Visa", "Diners Club"]
    }
  },

  "flex-layout.row#footer-3-desktop": {
    "children": ["rich-text#footer-bottom-one", "rich-text#footer-bottom-two", "footer-spacer", "footer-spacer"],
    "props": {
      "blockClass": "credits"
    }
  },
  "rich-text#footer-bottom-one": {
    "props": {
      "text": "Web ID: 878384163 <br> Copyright @2019 Calvin Klein. All rights reserved.",
      "blockClass": "footer"
    }
  },

  "rich-text#footer-bottom-two": {
    "props": {
      "text": "CA Transparency In Supply Chain & UK Modern Slavery Statement | Privacy Policy | Terms & Conditions",
      "blockClass": "footer"
    }
  },

  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#1-footer-mobile",
      "flex-layout.row#2-footer-mobile",
      "floating-chat"
    ]
  },
  "flex-layout.row#2-footer-mobile": {
    "children": ["flex-layout.col#footer-1-mobile"],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4
    }
  },
  "flex-layout.col#footer-1-mobile": {
    "children": [
      "accepted-payment-methods",
      "social-networks",
      "rich-text#footer-mobile"
    ],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4,
      "rowGap": 4
    }
  },
  "flex-layout.row#1-footer-mobile": {
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4
    },
    "children": ["logo#footer-logo-mobile","vtex.menu@2.x:menu#footer-mobile"]
  },
  "logo#footer-logo-mobile":{
    "props":{

    }
  },
  "rich-text#footer-mobile": {
    "props": {
      "text": "All stock and product photos are from photos.icons8.com",
      "blockClass": "footer"
    }
  }
}
